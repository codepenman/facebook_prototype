<div ng-controller="DeleteGroupCtrl">
		<form>
			<div class="form-group">
			     <label ng-if="groupsAvailable == true">Select groups to delete</label>
			     <label ng-if="groupsAvailable == false">No groups to delete</label>
			</div>
			<div class="form-group">
				<li ng-repeat="group in groupsList">
					<input type="checkbox" ng-change="addGroup2Delete(group.id)" ng-model="selected"></input><div class="hdivider-2"></div>{{group.name}}
				</li>	  		  		 
			</div>
			<hr/>			
		  	<button ng-if="groupsAvailable == true" type="submit" class="btn btn-default pull-right" ng-click="deleteGroup()">Delete</button>
		</form>
</div>